use storage_platform;

DROP TABLE IF EXISTS `storage_platform_druid_physical_cluster`;
create table storage_platform_druid_physical_cluster
(
    `id` bigint(20)  NOT NULL AUTO_INCREMENT COMMENT 'primary id',
    `name` varchar(128) NOT NULL DEFAULT '' COMMENT 'cluster name',
    `description` varchar(128) NOT NULL DEFAULT '' COMMENT 'description',
    `coordinator` varchar(128) NOT NULL DEFAULT '',
    `overlord` varchar(128) NOT NULL DEFAULT '',
    `router` varchar(128) NOT NULL DEFAULT '',
    `broker` varchar(128) NOT NULL DEFAULT '',
    `historical` varchar(128) NOT NULL DEFAULT '',
    `middleManager` varchar(128) NOT NULL DEFAULT '',
    `zookeeper` varchar(128) NOT NULL DEFAULT '',
    `create_time` TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    `update_time` TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    PRIMARY KEY (`id`)
) ENGINE=InnoDB COMMENT 'storage_platform_druid_physical_cluster';